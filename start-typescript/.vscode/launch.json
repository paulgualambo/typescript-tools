{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TypeScript in Node.js",
      "program": "${workspaceFolder}/app/src/index.ts",
      "outFiles": [
        "${workspaceFolder}/app/src/build/**/*.js"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Docker Node.js Launch",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "platform": "node",
      "node": {
        "package": "${workspaceFolder}/app/package.json",
        "localRoot": "${workspaceFolder}/app"
      }
    }
  ]
}