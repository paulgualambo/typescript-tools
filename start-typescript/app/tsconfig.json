{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "test/index.spec.ts",
    "test/example.spec.ts"
  ],
  "exclude": [
    "test/**/*.spec.ts"
  ]
}
