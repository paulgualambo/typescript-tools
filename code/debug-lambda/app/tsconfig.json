{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,    
    "types": [
      "node", "jest"
    ],
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "debug/**/*",
    "src/**/*",
     "test/**/*"
  ]  
}