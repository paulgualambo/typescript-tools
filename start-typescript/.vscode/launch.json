{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TypeScript in Node.js",
      //"preLaunchTask": "tsc: build - ${workspaceFolder}/app/tsconfig.json",
      "program": "${workspaceFolder}/app/src/index.ts",
      "outFiles": [
        "${workspaceFolder}/app/src/build/**/*.js"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}