{
    "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "lib": ["es6"],
      "allowJs": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "types": ["node", "jest"],
      "skipLibCheck": true,
      "sourceMap": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "tests/**/*.ts"
    ]
  }
  